@model IEnumerable<StarSecurityService.Models.Employee>

@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box">
    <div class="box-body">
        <table id="datatable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.birthday)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.position)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.qualification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.achievement)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.depantment_id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.contract_id)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.qualification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.achievement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.contract_id)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EmployeeEdit", new { id = item.id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "EmployeeDetails", new { id = item.id }, new { @class = "btn btn-info" })
                        @using (Html.BeginForm("EmployeeDelete", "Admin", new { id = item.id }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this?');", style = "display: inline-block" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button class="btn btn-danger" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
