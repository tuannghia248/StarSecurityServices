@model IEnumerable<StarSecurityService.Models.Account>

@{
    Layout = null;
}

<div class="box box-primary">
    <div class="box-body">
        <table id="datatable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.role)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.role)
                    </td>
                    @{
                        var session = (StarSecurityService.Common.UserLogin)Session[StarSecurityService.Common.CommonConstants.USER_SESSION];
                    }
                    <td>
                        @if (session.Role == "admin")
                        {
                            @Html.ActionLink("Details", "AccountDetails", new { id = item.id }, new { @class = "btn btn-info", @style = "margin-right: 3px" })
                            @Html.ActionLink("Edit", "AccountEdit", new { id = item.id }, new { @class = "btn btn-primary", @style = "margin-right: 3px" })
                            using (Html.BeginForm("AccountDelete", "Admin", new { id = item.id }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this?');", style = "display: inline-block" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HttpMethodOverride(HttpVerbs.Delete)
                                <button class="btn btn-danger" type="submit">Delete</button>
                            }
                        }
                        else
                        {
                            @Html.ActionLink("Details", "AccountDetails", new { id = item.id }, new { @class = "btn btn-info" })
                        }

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

